<Window x:Class="WpfApp1.AddOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddOrders" Height="450" Width="800">
    <Grid>
        <Button Content="отмена" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Width="56" Click="Button_Click_1"/>
        <Button Content="добавить" HorizontalAlignment="Left" Margin="94,10,0,0" VerticalAlignment="Top" Width="57" Click="Add_Button_Click"/>
        <StackPanel Margin="146,58,146,87">
            <TextBox x:Name="numberOfOrder" Text="номер заказа" Margin="50,35,50,5"></TextBox>
            <TextBox x:Name="typeOfGoods" Text="тип товара" Margin="50,5"></TextBox>
            <TextBox x:Name="weightOne" Text="вес одной еденицы" Margin="50,5"></TextBox>
            <TextBox x:Name="volumeOfUnit" Text="обьем одной еденицы " Margin="50,5"></TextBox>
            <TextBox x:Name="distance" Text="растояние до ближайшего склада" Margin="50,5"></TextBox>
            <TextBox x:Name="quantity" Text="количество " Margin="50,5"></TextBox>
            <TextBox x:Name="name" Text="имя заказчика" Margin="50,5"></TextBox>
            <TextBox x:Name="phoneNumber" Text="номер телефона" Margin="50,5"></TextBox>
        </StackPanel>
    </Grid>
</Window>
